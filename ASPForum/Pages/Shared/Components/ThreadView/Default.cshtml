@model List<ASPForum.Post.ThreadInfo>
<!DOCTYPE html>
<html>
<head>
	<title>Testing page</title>
	<link href="~/index.css" rel="stylesheet" type="text/css">
</head>
<body>
	<div id="top"></div>
	<div class="MainTitle">
		<h1>Olive colored website!</h1>
		<h3 style="display: inline">Coloured for the brits</h3>
		<a class="NavLink" href="#bottom">bottom</a>
</div>
<div class="PostForm">
	<form action="Reply" method="post">
		@Html.AntiForgeryToken()
		<label for="NameInput">Name:</label>
		<input id="NameInput" name="NameInput" type="text"><br>

		<label for="OtherInput">Other:</label>
		<input id="OtherInput" name="OtherInput" type="text"><br>

		<label for="ContentInput">Content:</label>
		<textarea name="ContentInput" id="ContentInput" rows="5"></textarea><br>
		<input type="hidden" name="BoardID" value="0" />
		@*<input type="submit" value="Submit" />*@
	</form>
</div>
<p>Today is @DateTime.Today</p>
@{
	foreach (var Thread in Model) {
		<div class="Post">
			<div class="PostInfo">
				<p>@Thread.ThreadID</p>
				<p>Name: @Thread.Name</p>
				<p>Other: @Thread.Other</p>
			</div>
			<div class="PostContent">
				<p>@Thread.Content</p>
			</div>
		</div>
	}
}
<a class="NavLink" href="#top">top</a>
<div id="bottom"></div>
</body>
</html>
